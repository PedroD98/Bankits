<h2><%= t('.balance') %>: <%= @user.balance.format %></h2>

<div class="row mt-4">

  <div class="col-md-3">
    <div class="card mb-5 text-bg-success">
      <div class="card-body">
        <h5 class="card-title"><%= t('.make_deposit') %></h5>
        <%= render 'transactions/deposit_form'%>
      </div>
    </div>

    <div class="card text-bg-danger">
      <div class="card-body">
        <h5 class="card-title"><%= t('.make_withdraw') %></h5>
        <%= render 'transactions/withdraw_form'%>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <h3 class="text-center">Extrato</h3>
    <% if @transactions.any? %>
      <ul class="list-group">
        <% @transactions.each do |transaction| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
                <strong><%= transaction.description %></strong>
                <small class="text-muted"><%= l(transaction.processed_at, format: :brazilian) %></small>
            </div>
            <span class="fw-bold <%= transaction.value_cents.positive? ? 'text-success' : 'text-danger'%>">
                <%= transaction.value.format %>
            </span>
          </li>
        <% end %>
      </ul>
    <% else %>
     <div class="text-center p-5">
        <h4><%= t('.no_transactions') %></h4>
        <p class="text-muted"><%= t('.start_suggestion') %></p>
     </div>
    <% end %>
  </div>
</div>