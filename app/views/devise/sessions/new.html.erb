<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :acc_number, class: "form-label" %><br />
    <%= f.number_field :acc_number, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "btn btn-primary mt-3" %>
  </div>
<% end %>
